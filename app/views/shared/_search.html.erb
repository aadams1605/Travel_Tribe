<%= form_with(url: search_path, method: "get", local: true, class: "search-form-control form-group search-form") do |form| %>
  <%= form.text_field :query, class: "form-control string required", id: "search_query", placeholder: "Search Event by name/location or User by name..." %>
  <%= form.button type: "submit", class: "btn btn-flat" do %>
    Search
  <% end %>
<% end %>
