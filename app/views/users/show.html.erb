<div class="container-event-show">
  <div class="card-grid">
      <% if @user.photo.key %>
        <%= cl_image_tag @user.photo.key %>
      <% end %>
    <div class="event-descriptions">
      <div class="description-column">
        <div class="row">
          <h2 class="listing"> <%= @user.username %></h2>
          <h2 class="listing"> <%= @user.gender %></h2>
        </div>
        <div class="row">
          <h2 class="listing"> <%= @user.age %></h2>
        </div>
      </div>
      <div class="description-column">
        <div class="row">
          <h2 class="listing"> <%= @user.description %></h2>
          <h2 class="listing"> <%= @user.location %></h2>
        </div>
      </div>
    </div>
  </div>
  <div class="chat-button-container">
    <button>Chat with <%= @user.username %></button>
  </div>
</div>
