<%= simple_form_for [@event, @chatroom, @message],
  html: { data: { chatroom_subscription_target: "form", action: "turbo:submit-end->chatroom-subscription#sendMessage keyup->chatroom-subscription#sendMessage" }, class: "d-flex" } do |f| %>
  <%= f.input :content,
    label: false,
    placeholder: "Message ##{@chatroom.name}",
    wrapper_html: {class: "flex-grow-1"},
    input_html: {
      data: { chatroom_subscription_target: "messageInput"} } %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
