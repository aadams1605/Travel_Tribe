<div id="message">
  <small>
    <%= cl_image_tag message.user.photo.key, class: "avatar" %>
    <div>
      <div><strong><%= message.user.username %></strong></div>
      <div><i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i></div>
    </div>
  </small>
  <p><%= message.content %></p>
</div>
